---
import type { IIngredientFields } from '@customTypes/generated/contentful';

export interface IIngredientsProps {
	data: IIngredientFields[];
}

const { data } = Astro.props as IIngredientsProps;
---

<table class="table w-full shadow-xl rounded-2xl">
	<!-- head -->
	<thead>
		<tr>
			<th></th>
			<th>Menge</th>
			<th>Zutat</th>
		</tr>
	</thead>
	<!-- body -->
	<tbody>
		{
			data.map((elem: { amount?: string; title: string }) => (
				<tr>
					<th>
						<label>
							<input type="checkbox" class="checkbox" />
						</label>
					</th>
					<td>{elem.amount}</td>
					<td>{elem.title}</td>
				</tr>
			))
		}
	</tbody>
	<!-- foot -->
	<tfoot>
		<tr>
			<th></th>
			<th>Menge</th>
			<th>Zutat</th>
		</tr>
	</tfoot>
</table>
