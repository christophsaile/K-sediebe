---
export interface IPagination {
	currentPage: number;
	totalPages: number;
}

const { currentPage, totalPages } = Astro.props as IPagination;
---

<nav aria-label="Pagination Navigation" class="mx-auto">
	<ul class="btn-group">
		{
			Array.from({ length: totalPages }, (_, i) => i + 1).map((elem) => (
				<li class="pt-0 px-1">
					<a
						href={`${elem === 1 ? '/' : '/' + elem + '/'}`}
						class={`btn ${elem === currentPage ? 'btn-warning' : ''}`}
						aria-label={`Seite ${elem}`}
						aria-current={elem === currentPage ? 'true' : undefined}
					>
						{elem}
					</a>
				</li>
			))
		}
	</ul>
</nav>
