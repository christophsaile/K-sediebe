---
export interface IPagination {
	page: any
}

const { page } = Astro.props as IPagination;
const startPage = Math.max(page.currentPage - 3, 1);
const endPage = Math.min(startPage + 3, page.lastPage);
---

<nav aria-label='Pagination Navigation' class='mx-auto'>
	<ul class='btn-group'>	
		{
			page.url.prev && (
				<li class='pt-0 px-1'>
					<a
						href={page.url.prev}
						class={`btn w-10 px-0`}
						aria-label='Vorherige Seite'
					>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							fill='none'
							viewBox='0 0 24 24'
							stroke-width='1.5'
							stroke='currentColor'
							class='w-6 h-6'
						>
							<path
								stroke-linecap='round'
								stroke-linejoin='round'
								d='M15.75 19.5 8.25 12l7.5-7.5'
							/>
						</svg>
					</a>
				</li>
			)
		}
		{
			Array.from({ length: endPage - startPage + 1 }, (_, i) => startPage + i).map((elem) => (
				<li class='pt-0 px-1'>
					<a
						href={`${elem === 1 ? '/' : '/' + elem + '/'}`}
						class={`btn w-10 ${elem === page.currentPage ? 'btn-warning' : ''}`}
						aria-label={`Seite ${elem}`}
						aria-current={elem === page.currentPage ? 'true' : undefined}
					>
						{elem}
					</a>
				</li>
			))
		}
		{
			page.url.next && (
				<li class='pt-0 px-1'>
					<a
						href={page.url.next}
						class={`btn w-10 px-0 `}
						aria-label='NÃ¤chste Seite'
					>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							fill='none'
							viewBox='0 0 24 24'
							stroke-width='1.5'
							stroke='currentColor'
							class='w-6 h-6'
						>
							<path stroke-linecap='round' stroke-linejoin='round' d='m8.25 4.5 7.5 7.5-7.5 7.5' />
						</svg>
					</a>
				</li>
			)
		}
	</ul>
</nav>
